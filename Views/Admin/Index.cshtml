@model IEnumerable<Product>

@{
    ViewBag.Title = "All Products";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th colspan="3">
            <form class="form-inline" asp-action="Search" asp-controller="Product" asp-route-genre="" method="get">
                <input class="form-control mr-sm-2" type="search" name="SearchString" placeholder="Автор или название" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Поиск</button>
            </form></th>
        <th colspan="1">
            <div class="text-center">
                <a asp-action="Create" class="btn btn-primary">Добавить книгу</a>
            </div>
        </th>
    </tr>
</table>
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th class="text-right">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["IdSortParm"]">ID</a>
        </th>
        <th>
            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]">Название</a>
        </th>
        <th class="text-right">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]">Цена</a>
        </th>
        <th class="text-center">Действия</th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td class="text-right">@item.ProductID</td>
            <td>@item.Name</td>
            <td class="text-right">@item.Price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-productId="@item.ProductID">
                        Edit
                    </a>
                    <input type="hidden" name="ProductID" value="@item.ProductID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>


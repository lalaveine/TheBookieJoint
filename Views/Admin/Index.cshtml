@model IEnumerable<Product>

@{
    ViewBag.Title = "Каталог";
    Layout = "_AdminLayout";
}
<table class="table table-striped table-bordered table-sm">
    <tr>
        <th colspan="3">
            <form class="form-inline" asp-action="Index" asp-controller="Admin" method="get">
                <input class="form-control mr-sm-2" type="search" name="SearchString" value="@ViewData["currentFilter"]" placeholder="" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Поиск</button> | <a asp-action="Index">Back to Full List</a>
            </form>
        <th colspan="1">
            <div class="text-center">
                <a asp-action="Create" class="btn btn-primary">Добавить книгу</a>
            </div>
        </th>
    </tr>
</table>
<table class="table table-striped table-bordered table-sm">
    <tr>        
        <th class="text-center">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["IdSortParm"]" style="text-decoration: none">
                <span>ID</span>
                @if (@ViewData["IdSort"] == "true") {
                    <span class="fa fa-sort-amount-asc"></span>                  
                } else if (ViewData["IdDescSort"] == "true") {
                    <span class="fa fa-sort-amount-desc"></span>
                }
            </a>                
        </th>        
        <th class="text-center">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParm"]" style="text-decoration: none" >
                <span>Название</span>
                @if (@ViewData["NameSort"] == "true") {
                    <span class="fa fa-sort-amount-asc"></span>                  
                } else if (ViewData["NameDescSort"] == "true") {
                    <span class="fa fa-sort-amount-desc"></span>
                }
            </a>
        </th>
        <th class="text-center">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["AuthorSortParm"]" style="text-decoration: none"> 
                <span>Автор</span>
                @if (@ViewData["AuthorSort"] == "true") {
                    <span class="fa fa-sort-amount-asc"></span>                  
                } else if (ViewData["AuthorDescSort"] == "true") {
                    <span class="fa fa-sort-amount-desc"></span>
                }
            </a>
        </th>
        <th class="text-center">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["LanguageSortParm"]" style="text-decoration: none">
                <span>Язык издания</span>
                @if (@ViewData["LanguageSort"] == "true") {
                    <span class="fa fa-sort-amount-asc"></span>                  
                } else if (ViewData["LanguageDescSort"] == "true") {
                    <span class="fa fa-sort-amount-desc"></span>
                }
            </a>
        </th>
        <th class="text-center">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["GenreSortParm"]" style="text-decoration: none"> 
                <span>Жанр</span>
                @if (@ViewData["GenreSort"] == "true") {
                    <span class="fa fa-sort-amount-asc"></span>                  
                } else if (ViewData["GenreDescSort"] == "true") {
                    <span class="fa fa-sort-amount-desc"></span>
                }
            </a>
        </th>
        <th class="text-center">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["PublisherSortParm"]" style="text-decoration: none">
                <span>Издатель</span>
                @if (@ViewData["PublisherSort"] == "true") {
                    <span class="fa fa-sort-amount-asc"></span>                  
                } else if (ViewData["PublisherDescSort"] == "true") {
                    <span class="fa fa-sort-amount-desc"></span>
                }
            </a>
        </th>
        <th class="text-center">
            <a asp-action="Index" asp-route-sortOrder="@ViewData["PriceSortParm"]" style="text-decoration: none">
                <span>Цена</span>
                @if (@ViewData["PriceSort"] == "true") {
                    <span class="fa fa-sort-amount-asc"></span>                  
                } else if (ViewData["PriceDescSort"] == "true") {
                    <span class="fa fa-sort-amount-desc"></span>
                }
            </a>
        </th>
        <th class="text-center">Действия</th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td class="text-right">@item.ProductID</td>
            <td>@item.Name</td>
            <td>@item.Author</td>
            <td>@item.Language</td>
            <td>@item.Genre</td>
            <td>@item.Publisher</td>
            <td class="text-right">@item.Price.ToString("c")</td>
            <td class="text-center">
                <form asp-action="Delete" method="post">
                    <a asp-action="Edit" class="btn btn-sm btn-warning" asp-route-productId="@item.ProductID">
                        Edit
                    </a>
                    <input type="hidden" name="ProductID" value="@item.ProductID" />
                    <button type="submit" class="btn btn-danger btn-sm">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>


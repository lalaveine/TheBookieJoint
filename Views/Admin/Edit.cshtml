@model Product
@{
    ViewBag.Title = "Edit Product";
    Layout = "_AdminLayout";
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductID" />\

    <div class="form-group">
        <label asp-for="Name"></label>
        <div><span asp-validation-for="Name" class="text-danger"></span></div>
        <input asp-for="Name" class="form-control" />
    </div>
    
    <div class="form-group">
        <label asp-for="Author"></label>
        <div><span asp-validation-for="Author" class="text-danger"></span></div>
        <input asp-for="Author" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Translators"></label>
        <div><span asp-validation-for="Translators" class="text-danger"></span></div>
        <input asp-for="Translators" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <div><span asp-validation-for="Description" class="text-danger"></span></div>
        <input asp-for="Description" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="OriginalLanguage"></label>
        <div><span asp-validation-for="OriginalLanguage" class="text-danger"></span></div>
        <input asp-for="OriginalLanguage" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Language"></label>
        <div><span asp-validation-for="Language" class="text-danger"></span></div>
        <input asp-for="Language" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ISBN"></label>
        <div><span asp-validation-for="ISBN" class="text-danger"></span></div>
        <input asp-for="ISBN" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Genre"></label>
        <div><span asp-validation-for="Genre" class="text-danger"></span></div>
        <input asp-for="Genre" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Publisher"></label>
        <div><span asp-validation-for="Publisher" class="text-danger"></span></div>
        <input asp-for="Publisher" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PublicationYear"></label>
        <div><span asp-validation-for="PublicationYear" class="text-danger"></span></div>
        <input asp-for="PublicationYear" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Price"></label>
        <div><span asp-validation-for="Price" class="text-danger"></span></div>
        <input asp-for="Price" class="form-control" />
    </div>

    <div class="text-center">
        <button class="btn btn-primary" type="submit">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

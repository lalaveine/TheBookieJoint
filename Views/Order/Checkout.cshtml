@model Order
<h2>Ваши данные</h2>
<p>Пожалуйста, укажите свои данные, чтобы мы знали куда доставить ваши книги!</p>

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Checkout" method="post">
    <h3>Отправить к</h3>
    <div class="form-group">
        <label>Имя и Фамилия:</label><input asp-for="Name" class="form-control" placeholder="Имя Фамилия"/>
    </div>
    <h3>Адрес</h3>
    <div class="form-group">
        <label>Первый:</label><input asp-for="Line1" class="form-control" />
    </div>
    <div class="form-group">
        <label>Второй:</label><input asp-for="Line2" class="form-control" />
    </div>
    <div class="form-group">
        <label>Третий:</label><input asp-for="Line3" class="form-control" />
    </div>
    <div class="form-group">
        <label>Страна:</label><input asp-for="Country" class="form-control" />
    </div>
    <div class="form-group">
        <label>Город:</label><input asp-for="City" class="form-control" />
    </div>
    <div class="form-group">
        <label>Почтовый индекс:</label><input asp-for="PostalCode" class="form-control" />
    </div>    
    <h3>Дополнительно</h3>
    <div class="checkbox">
        <label>
            <input asp-for="GiftWrap" /> Завернуть в подарочную упаковку
        </label>
    </div>
    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Завершить заказ" />
    </div>
</form>

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/css/bootstrap.min.css" />
    <style>
        .input-validation-error { border-color: red; background-color: #fee ; }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body class="m-1 p-1">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark" role="navigation">
        <a class="col navbar-brand" href="/Admin">The Bookie Joint | <small>@ViewBag.Title</small></a>
        <div class="collapse navbar-collapse">
            <div class="col text-right">
                <a class="btn btn-sm btn-primary" asp-action="Logout" asp-controller="Account">Log Out</a>
            </div>        
        </div>
    </nav>
    <div class="row m-1 p-1">
        <div id="genres" class="col-3">
            @await Component.InvokeAsync("NavigationMenu")
        </div>
        <div class="col-9">
            @if (TempData["message"] != null) {
                <div class="alert alert-success">@TempData["message"]</div> 
            }
            @RenderBody()
        </div>
    </div>

    <script asp-src-include="/lib/bootstrap/js/*.min.js"></script>

</body>
</html>

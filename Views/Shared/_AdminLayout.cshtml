<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" asp-href-include="/lib/bootstrap/css/bootstrap.min.css" />
    <style>
        .input-validation-error { border-color: red; background-color: #fee ; }
    </style>
    <title>@ViewBag.Title</title>
</head>
<body class="m-1 p-1">
    <div class="bg-info p-2 row">
        <div class="col">
        <h4>@ViewBag.Title</h4>
    </div>
    <div class="col-2">
        <a class="btn btn-sm btn-primary"
            asp-action="Logout" asp-controller="Account">Log Out</a>
    </div>

    @if (TempData["message"] != null) {
        <div class="alert alert-success">@TempData["message"]</div> 
    }
    @RenderBody()

    <script asp-src-include="/lib/bootstrap/js/*.min.js"></script>

</body>
</html>
